{% extends 'layout.html.twig' %}

{% block title %}
    Eliminar
{% endblock %}

{% block content %}
    {% for mensaje in app.flashes('error') %}
        <div class="alert alert-danger">
            {{ mensaje }}
        </div>
    {% endfor %}
    <h1>{{ factura.id }} {{ factura.alquiler }} {{ factura.descripcion }} {{ factura.precio }} €</h1>

    <div class="alert alert-warning">
        ¿Está seguro de que desea eliminar esta factura? La operación no se puede deshacer.
    </div>
    <form method="post">
        <a href="{{ path('listado_reparaciones') }}" class="btn btn-primary"><i class="fa fa-arrow-left"></i> Volver al listado de facturas</a>
        <button type="submit" class="btn btn-danger"><i class="fa fa-trash"></i> Eliminar factura</button>
    </form>

{% endblock %}
