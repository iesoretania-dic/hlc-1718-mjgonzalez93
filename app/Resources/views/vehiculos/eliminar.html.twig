{% extends 'layout.html.twig' %}

{% block title %}
    Eliminar: {{ vehiculo.matricula }}
{% endblock %}

{% block content %}
    {% for mensaje in app.flashes('error') %}
        <div class="alert alert-danger">
            {{ mensaje }}
        </div>
    {% endfor %}
    <h1>{{ vehiculo.matricula }}</h1>

    <div class="alert alert-warning">
        ¿Está seguro de que desea eliminar este vehiculo? La operación no se puede deshacer.
    </div>
    <form method="post">
        <a href="{{ path('listado_vehiculos') }}" class="btn btn-primary"><i class="fa fa-arrow-left"></i> Volver al listado de vehiculos</a>
        <button type="submit" class="btn btn-danger"><i class="fa fa-trash"></i> Eliminar vehiculo</button>
    </form>

{% endblock %}
