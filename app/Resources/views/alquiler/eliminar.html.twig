{% extends 'layout.html.twig' %}

{% block title %}
    Eliminar
{% endblock %}

{% block content %}
    {% for mensaje in app.flashes('error') %}
        <div class="alert alert-danger">
            {{ mensaje }}
        </div>
    {% endfor %}
    <h1>{{ alquiler.vehiculo }} {{ alquiler.usuario }} {{ alquiler.precioTotal }} €</h1>

    <div class="alert alert-warning">
        ¿Está seguro de que desea eliminar este alquiler? La operación no se puede deshacer.
    </div>
    <form method="post">
        <a href="{{ path('listado_alquiler') }}" class="btn btn-primary"><i class="fa fa-arrow-left"></i> Volver al listado de alquileres</a>
        <button type="submit" class="btn btn-danger"><i class="fa fa-trash"></i> Eliminar alquiler</button>
    </form>

{% endblock %}
